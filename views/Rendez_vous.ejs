<body>



  <%- include ('navbar.ejs') %>

  <main id="main">

   

   

    <!-- ======= Services Section ======= -->

   <section id="services" class="services">
    
      <div class="container">
        <h1 class="rowRS title">Gerez vos rendez-vous</h1>
        <div class="row rowRST">
             
            <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.13/css/all.css" integrity="sha384-DNOHZ68U8hZfKXOrtjWvjxusGo9WQnrNx2sqG0tfsghAvtVlRW3tvkXWZh58N9jp" crossorigin="anonymous">

            <div class="container">
              <div class="row le-hide">
                  
                 <div class="col-lg-12">
                  <div class="m-0 row p-3">
                    
                    <div class="col-sm-12 col-lg-2 p-0 pl-lg-5">
                     <strong> Nom</strong>
                    </div>
                    <div class="col-sm-12 col-lg-2 p-0 pl-lg-5">
                      <strong>Prenom</strong>
                    </div>
                    <div class="col-sm-12 col-lg-4 p-0 pl-lg-5">
                        <strong>Date de demande</strong>
                    </div>
                    <div class="col-sm-12 col-lg-4 p-0">
                      <strong>Action</strong>
                    </div>
                  </div>
                </div>
                
                
              </div>

              <div class="row">
                <% if (locals.rdv) { 
  
                  rdv.rendvinfo.forEach( (row) => {
                    
                  %>
               <div id="rdv-row-<%  __append(row.idp)%>" class="col-sm-4 col-lg-12 mt-2 mb-2">
                  <div class="m-0 row row-container bg-white p-3">
                    
                    <div class="col-sm-12 col-lg-2  p-0 p-0 pl-lg-5"><%  __append(row.nom) %></div>
                    <div class="col-sm-12 col-lg-2 p-0 p-0 pl-lg-5"><%  __append(row.prenom) %></div>
                    <div class="col-sm-12 col-lg-4 p-0 p-0 pl-lg-5"><%  __append(row.date.toLocaleString()) %></div>
                    <div class="col-sm-12 col-lg-4 p-0" style="margin-left: 66%; margin-top: -2.5%;">
     
                      <button class="btn btn-sm btn-success d-inline-block mr-1" onclick="validaterdv(<%  __append(row.idp)%>)"><i class="fas fa-check-square"></i>               </button>
                      <button class="btn btn-sm btn-danger d-inline-block" onclick="deleterdv(<%  __append(row.idp)%>)"><i class="fas fa-trash-alt"></i></i>               </button>
                      <input class="btn btn-sm btn-success ddIn d-inline-block " type="datetime-local" id="date-<%  __append(row.idp)%>">

                    </div>
                  </div>

                  
                </div>
                <%  });   %>

                  <% }  %>
            
              

                 </div>
            </div>

        </div>
      </div>
    </section> <!-- End Services Section -->
  


  </main> <!-- End #main -->
